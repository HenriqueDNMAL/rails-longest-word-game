<h1 class="m-3"><%= @letters.join(" ") %></h1>
<form class="form-control mx-3" action="/score" data-turbo="false" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :start_time, Time.now %>
  <%= hidden_field_tag :letters, @letters.join %>
  <input type="text" name="word">
  <input type="submit" value="Ask!">
</form>

<p class="m-3">Total score: <%= session[:total_score] || 0 %></p>
